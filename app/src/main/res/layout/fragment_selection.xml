<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/jarvisPrimaryColor">

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/gl_20"
        app:layout_constraintEnd_toEndOf="@id/gl_80"
        android:layout_marginTop="@dimen/default_margin"
        style="@style/DefaultEdittext"
        android:id="@+id/edittext_search_field"/>

    <ListView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/edittext_search_field"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_select"
        android:layout_margin="@dimen/default_margin"
        style="@style/JarvisListView"
        android:id="@+id/listview_selection_data"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/gl_20"
        app:layout_constraintEnd_toEndOf="@id/gl_80"
        android:text="@string/button_select"
        style="@style/DefaultButton"
        android:id="@+id/button_select"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintGuide_percent="0.2"
        android:orientation="vertical"
        android:id="@+id/gl_20"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintGuide_percent="0.8"
        android:orientation="vertical"
        android:id="@+id/gl_80"/>

</androidx.constraintlayout.widget.ConstraintLayout>