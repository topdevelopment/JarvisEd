<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlNormal">@color/jarvisSecondaryColor</item>
        <item name="colorControlActivated">@color/jarvisSecondaryColor</item>
        <item name="colorControlHighlight">@color/jarvisSecondaryColor</item>
    </style>

    <style name="DefaultButton">
        <item name="android:layout_margin">@dimen/default_margin</item>
        <item name="android:background">@drawable/primary_button_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/textsize_default_button_style</item>
    </style>

    <style name="RoundButton">
        <item name="android:layout_height">@dimen/circle_button_height_width</item>
        <item name="android:layout_width">@dimen/circle_button_height_width</item>
        <item name="android:layout_margin">@dimen/default_margin</item>
        <item name="android:background">@drawable/circle_button_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/textsize_default_button_style</item>
    </style>

    <style name="DefaultEdittext">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textSize">@dimen/textsize_default_button_style</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="DialogEdittext">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:textSize">@dimen/textsize_default_button_style</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="MenuTextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
        <item name="android:textSize">@dimen/textsize_default_button_style</item>
    </style>

    <style name="JarvisListView">
        <item name="android:choiceMode">singleChoice</item>
        <item name="android:listSelector">@color/jarvisPrimaryLightColor</item>
    </style>

    <style name="JarvisSpinner">
        <item name="android:layout_height">@dimen/spinner_height</item>
        <item name="android:background">@drawable/primary_spinner_background</item>
    </style>

</resources>
